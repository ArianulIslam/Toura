<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="org.debuggers.anew.toura.CompassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/compass"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/compassmain"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="66dp" />

        <TextView
            android:text="N - উত্তর , S - দক্ষিন,E - পূর্ব, W-পশ্চিম "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textColor="@color/cardview_light_background"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_below="@+id/compass"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:text="N-North , E -East, W-West,S-South"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView14"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />
    </RelativeLayout>


</RelativeLayout>
