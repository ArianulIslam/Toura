<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads ="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.example.anew.toura.org.example.anew.toura.MainActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backgraound"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Shop for Travel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        tools:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:onClick="OpenShopNow" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/geolocalization"
            android:src="@drawable/geolocalization"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:onClick="OpenPlaceDetailsNow" />
        <TextView

            android:id="@+id/PlaceDetailsText"
            android:text="Place Details"
            android:layout_row="1"
            android:layout_column="0"

            android:layout_width="88dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/compass"
            android:id="@+id/Compassbtn"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:onClick="OpenCompassNow" />/>
        <TextView

            android:id="@+id/CompassText"
            android:text="Compass"
            android:layout_row="1"
            android:layout_column="1"

            android:layout_width="88dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/musicplayer"
            android:id="@+id/TourSongLyricsbtn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:onClick="OpenTourSongNow" />
        <TextView

            android:id="@+id/MusicPlayerText"
            android:text="Tour Song Lyrics"
            android:layout_row="3"
            android:layout_column="1"

            android:layout_width="88dp"
            android:layout_height="37dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <TextView

            android:id="@+id/CalculatorText"
            android:text="Tour Calculator+"
            android:layout_row="3"
            android:layout_column="2"

            android:layout_width="88dp"
            android:layout_height="39dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/firstaidkit"
            android:id="@+id/PrimaryTreatBtn"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:onClick="OpenTreatmentNow" />

        <TextView

            android:id="@+id/PrimaryText"
            android:text="Primary Treatment"
            android:layout_row="5"
            android:layout_column="0"

            android:layout_width="88dp"
            android:layout_height="46dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <TextView

            android:id="@+id/emergencyText"
            android:text="Emergency"
            android:layout_row="5"
            android:layout_column="1"

            android:layout_width="103dp"
            android:layout_height="31dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rentcar"
            android:id="@+id/NeedCarbtn"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OpenNeedCarNow" />
        <TextView

            android:id="@+id/needCarTxt"
            android:text="Need a Car?"
            android:layout_row="5"
            android:layout_column="2"

            android:layout_width="103dp"
            android:layout_height="37dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <TextView

            android:id="@+id/SpeedMeterText"
            android:text="Speed Meter"
            android:layout_row="1"
            android:layout_column="2"

            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <TextView

            android:id="@+id/WeatherText"
            android:text="Current Location"
            android:layout_row="3"
            android:layout_column="0"

            android:layout_width="88dp"
            android:layout_height="39dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/emergency"
            android:id="@+id/EmergencyBtn"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:onClick="OpenEmergencyNow" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/calculator"
            android:id="@+id/TourCalculator"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="OpenCalculatorNow" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/races"
            android:id="@+id/SpeedMeterBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:onClick="OpenSpeedMeterNow" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/maplocation"
            android:id="@+id/WeatherBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:onClick="OpenTruthandDare" />

    </GridLayout>
</RelativeLayout>
