<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:src="@+id/activity_need_car"
    tools:context="org.debuggers.anew.toura.NeedCarActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="91dp"
        app:srcCompat="@drawable/threecars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="20dp"
        android:text="+8801872604442"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/SmsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mail"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:id="@+id/callBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/callbuttun"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_orange_light"
        android:text="Macaw Tour and Travels LTD."
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
