<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anew.toura.org.example.anew.toura.EmergencyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/siren"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView"
                android:layout_marginTop="19dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="20sp"
                android:padding="10dp"
                android:text="Tourist Police"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toStartOf="@+id/TouriestPoliceBtn"
                android:textAlignment="center" />

            <ImageButton
                app:srcCompat="@drawable/callbuttun"
                android:id="@+id/TouriestPoliceBtn"
                android:layout_marginEnd="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Ambulance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_alignStart="@+id/textView"
                android:textAlignment="center" />

            <ImageButton
                app:srcCompat="@drawable/callbuttun"
                android:layout_marginTop="0dp"
                android:id="@+id/AmbulanceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/TouriestPoliceBtn" />

            <TextView
                android:text="Fire Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_alignTop="@+id/AmbulanceBtn"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <ImageButton
                app:srcCompat="@drawable/callbuttun"
                android:id="@+id/fireServicebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignEnd="@+id/AmbulanceBtn"
                android:layout_marginTop="0dp" />

            <TextView
                android:text="Blood Bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_alignTop="@+id/BloodBankBtn"
                android:layout_alignStart="@+id/textView5"
                android:textAlignment="center" />

            <ImageButton
                app:srcCompat="@drawable/callbuttun"
                android:id="@+id/BloodBankBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/fireServicebtn"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Helpline (any)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_alignTop="@+id/HelplineBtn"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="0dp"
                android:textAlignment="center" />

            <ImageButton
                app:srcCompat="@drawable/callbuttun"
                android:layout_marginTop="0dp"
                android:id="@+id/HelplineBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/BloodBankBtn" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
