<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_currency_converter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.debuggers.anew.toura.CurrencyConverterActivity"
    android:background="@android:color/holo_orange_light">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="215dp"
        android:id="@+id/CurrencyFeild"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:inputType="numberSigned|numberDecimal" />

    <Button
        android:text="Convert Now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/ConvertBtn"
        android:background="?attr/actionModeSplitBackground"
        android:layout_below="@+id/ConverterSpinner"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:onClick="ConvertBUTTON" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/ConverterSpinner"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_below="@+id/CurrencyFeild"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Select Currency : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/ConverterSpinner"
        android:layout_toStartOf="@+id/ConverterSpinner"
        android:layout_alignTop="@+id/ConverterSpinner"
        android:textSize="16sp" />

    <TextView
        android:text="Enter your Amount : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:id="@+id/EnterAmountText"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_above="@+id/ConverterSpinner"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

</RelativeLayout>
